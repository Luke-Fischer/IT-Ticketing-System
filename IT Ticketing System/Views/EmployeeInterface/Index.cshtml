@model IEnumerable<Ticket>
@{
    ViewData["Title"] = "Index";
}

<div class="container  p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Your Tickets</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="EmployeeInterface" asp-action="Create" class="btn btn-primary">
                Create New Ticket
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%" >
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                @obj.Title
                </td>
                <td width="30%">
                @obj.Message
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="EmployeeInterface" asp-action="Index" asp-route-id="@obj.TicketId" class="btn btn-primary">Edit</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
