@model Ticket

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Ticket</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="Title"></label>
			<input asp-for="Title" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Message"></label>
			<input asp-for="Message" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Priority"></label>
			<select asp-for="Priority" disabled class="selectpicker form-control">
				<option>Low</option>
				<option>Medium</option>
				<option>High</option>
				<option>Urgent</option>
			</select>
		</div>
		<div class="mb-3">
			<label asp-for="Status"></label>
			<input asp-for="Status" class="form-control" />
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
		<a asp-controller="AdminInterface" asp-action="Display" class="btn btn-secondary" style="width:150px">Your Tickets</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}